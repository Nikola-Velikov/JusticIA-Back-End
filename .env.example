NODE_ENV=production
# Railway injects PORT automatically; keep as fallback
PORT=8080

# Required: Mongo connection string (Railway Mongo or Atlas)
MONGO_URI=mongodb+srv://<user>:<pass>@<cluster>/<db>?retryWrites=true&w=majority

# Required: JWT secret used to sign tokens
JWT_SECRET=replace-with-a-long-random-string

# Frontend origin for CORS (set to your Vercel URL or custom domain)
CORS_ORIGIN=https://your-frontend.vercel.app

# Upstream generator endpoint for answers
GENERATE_URL=https://web-production-d8499.up.railway.app/generate

